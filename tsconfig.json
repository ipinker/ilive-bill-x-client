{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
        "@/*": ["./src/*"]
        },
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "@dcloudio/types",
            "@dcloudio/uni-app-x",
            "mini-types/types",
            "miniprogram-api-typings"
        ]
    },
    "exclude": [
        "node_modules",
        "unpackage",
        "src/**/*.nvue"
    ]
}